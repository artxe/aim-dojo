{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
    	"allowUmdGlobalAccess": true,
		"checkJs": true,
		"exactOptionalPropertyTypes": true,
		"lib": [ "ES2024", "DOM", "DOM.Iterable" ],
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"noEmit": true,
		"noPropertyAccessFromIndexSignature": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"types": [ "@webgpu/types" ]
	},
	"ts-node": { "esm": true }
}